<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.ahmadrosid.olxlite">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".OlxLite"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".core.welcome.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".core.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".TestActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".core.welcome.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".core.detail.DetailIklanActivity"
            android:label="@string/title_activity_detail_iklan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".core.iklan_saya.newiklan.NewIklanActivity">
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>